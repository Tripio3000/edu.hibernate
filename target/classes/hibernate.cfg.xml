<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property> <!-- DB Driver -->
        <property name="connection.url">jdbc:postgresql://localhost:5433/postgres</property> <!-- BD Mane -->
        <property name="connection.username">out-konyukhov4-av</property> <!-- DB User -->
        <property name="connection.password">1234</property> <!-- DB Password -->

        <property name="dialect">org.hibernate.dialect.PostgreSQL10Dialect</property> <!-- DB Dialect -->
        <property name="hibernate.hbm2ddl.auto">update</property> <!-- create / create-drop / update -->
        <property name="show_sql">true</property> <!-- Show SQL in console -->

        <mapping class="models.Seat"/>
        <mapping class="models.Passenger"/>

    </session-factory>
</hibernate-configuration>